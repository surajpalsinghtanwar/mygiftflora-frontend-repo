{
  "info": {
    "name": "Product Upload Collection",
    "_postman_id": "abcd-1234-efgh-5678",
    "description": "Upload product with multipart/form-data",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Product (multipart)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "{{token}}", "type": "text" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "name", "value": "prod", "type": "text" },
            { "key": "sku", "value": "tesfkkk", "type": "text" },
            { "key": "stock", "value": "12", "type": "text" },
            { "key": "price", "value": "50", "type": "text" },
            { "key": "discounted_price", "value": "50", "type": "text" },
            { "key": "category_id", "value": "a48251fa-5966-4b0b-b06e-7e42265ea8b4", "type": "text" },
            { "key": "variants", "value": "[{\"isDefault\":true,\"price\":50}]", "type": "text" },
            { "key": "mainImage", "type": "file", "src": "./src/data/product_images/main/type-1.png" },
            { "key": "galleryImages[]", "type": "file", "src": "./src/data/product_images/gallery/type-1-g1.png" }
          ]
        },
        "url": "{{api_base}}/admin/product"
      }
    }
  ]
}
